{
  "id": "com.helloaxis.axisapp",
  "version": "2.0.1",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#2698DD",
  "name": {
    "en": "Axis Gear"
  },
  "description": {
    "en": "Adds support for Axis Gear devices."
  },
  "category": "appliances",
  "tags": {
    "en": [
      "blind",
      "curtain",
      "shade",
      "zigbee"
    ]
  },
  "energy": {
    "measure_power": {
      "approximated": true
    },
    "batteries": [
      "INTERNAL"
    ]
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "permissions": [
    "homey:manager:speech-output",
    "homey:manager:ledring"
  ],
  "author": {
    "email": "dpanet@hotmail.com",
    "name": "Omar"
  },
  "bugs": {
    "url": "https://github.com/DPANET/AxisGear/issues"
  },
  "drivers": [
    {
      "id": "axis",
      "name": {
        "en": "Gear"
      },
      "class": "windowcoverings",
      "capabilities": [
        "onoff",
        "dim",
        "measure_battery"
      ],
      "images": {
        "large": "drivers/axis/assets/images/large.png",
        "small": "drivers/axis/assets/images/small.png"
      },
      "capabilitiesOptions": {
        "onoff": {
          "title": {
            "en": "Curtain open"
          }
        },
        "dim": {
          "title": {
            "en": "Open level"
          }
        }
      },
      "zigbee": {
        "manufacturerName": "AXIS",
        "manufacturerId": "AXIS",
        "productId": "Gear",
        "endpoints": {
          "1": {
            "clusters": [
              0,
              1,
              4,
              6,
              8
            ],
            "bindings": [
              6,
              8
            ]
          }
        },
        "learnmode": {
          "image": "drivers/axis/assets/learn.svg",
          "instruction": {
            "en": "Press the Pair button for 3 seconds until the pair light blink purple"
          }
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}