{
    "id": "com.helloaxis.axisapp",
    "version": "1.0.1",
    "compatibility": "1.x >=1.5.0",
    "sdk": 2,
    "brandColor": "#FF0000",
    "name": {
        "en": "Axis Gear"
    },
    "description": {
        "en": "Adds support for Axis Gear devices."
    },
    "category": "appliances",
    "tags": {
        "en": [
            "blind",
            "curtain",
            "shade",
            "zigbee"
        ]
    },
    "images": {
        "large": "assets/images/large.jpg",
        "small": "assets/images/small.jpg"
    },
    "permissions": [
        "homey:manager:speech-output",
        
        "homey:manager:ledring"
    ],
    "author": {
        "email": "dpanet@hotmail.com",
        "name": "Omar"
    },

    "bugs": {
        "url": "https://github.com/DPANET/AxisGear/issues"
    },
    "signals": {},
    "flow": {},
    "drivers": [
        {
            "id": "axis",
            "name": {
                "en":"Gear"
            },
            "class": "windowcoverings",
            "capabilities": [
                "onoff",
                "dim",
                "measure_battery"
            ],
            "images": {
                "large": "drivers/axis/assets/images/large.png",
                "small": "drivers/axis/assets/images/small.png"
            },

            "zigbee": {
                "manufacturerName": "AXIS",
                "manufacturerId":"AXIS",
                "productId": "Gear",
                "deviceId":512,
                "profileId":260,
                "learnmode": {
                    "image": "drivers/axis/assets/learn.svg",
                    "instruction": {
                        "en": "Press the Pair button for 3 seconds until the pair light blink green"                       
                    }
                }
            },
            "pair": 
                [
                    {
                        "id": "list_devices",
                        "template": "list_devices",
                        "navigation": {
                            "next": "add_devices"
                        }
                    },
                    {
                        "id": "add_devices",
                        "template": "add_devices"
                    }
              ]
            
        }
    ]
}