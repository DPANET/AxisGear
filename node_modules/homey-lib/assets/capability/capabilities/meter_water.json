{
  "type": "number",
  "title": {
    "en": "Water Meter",
    "nl": "Watermeter",
    "de": "Wasserzähler",
    "fr": "Compteur d'eau",
    "it": "Contatore dell'acqua"
  },
  "decimals": 2,
  "min": 0,
  "units": {
    "en": "m³"
  },
  "chartType": "spline",
  "desc": {
    "en": "Water usage in Cubic Meter (m³)",
    "nl": "Water gebruik in Kubieke Meter (m³)",
    "de": "Wasserverbrauch in Kubikmeter (m³)",
    "fr": "Consommation d'eau en mètres cubes (m³)",
    "it": "Utilizzo di acqua in metri cubi (m³)"
  },
  "insights": true,
  "getable": true,
  "setable": false,
  "uiComponent": "sensor",
  "$flow": {
    "triggers": [
      {
        "id": "meter_water_changed",
        "title": {
          "en": "The water meter changed",
          "nl": "De watermeter is veranderd",
          "de": "Der Wasserzähler hat sich geändert",
          "fr": "Le compteur d'eau a changé",
          "it": "Il contatore dell'acqua è cambiato"
        },
        "tokens": [
          {
            "name": "$id",
            "title": "$title",
            "type": "$type",
            "example": 25
          }
        ]
      }
    ]
  }
}