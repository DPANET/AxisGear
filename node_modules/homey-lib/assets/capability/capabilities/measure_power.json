{
  "type": "number",
  "title": {
    "en": "Power",
    "nl": "Energie",
    "de": "Energie",
    "fr": "Energie",
    "it": "Energia"
  },
  "units": {
    "en": "W"
  },
  "insights": true,
  "desc": {
    "en": "Power in Watt (W)",
    "nl": "Vermogen in Watt (W)",
    "de": "Energie in Watt (W)",
    "fr": "Energie en Watt (W)",
    "it": "Energia in Watt (W)"
  },
  "options": {
    "isApproximated": {
      "type": "boolean",
      "default": false,
      "desc": {
        "en": "This flag is used to determine that the device itself has no power measurement functionality, but that the driver calculates the energy use."
      }
    }
  },
  "chartType": "stepLine",
  "decimals": 2,
  "getable": true,
  "setable": false,
  "uiComponent": "sensor",
  "$flow": {
    "triggers": [{
      "id": "measure_power_changed",
      "title": {
        "en": "The power changed",
        "nl": "De energie is veranderd",
        "de": "Der Verbrauch hat sich gändert",
        "fr": "L'énergie a changé",
        "it": "L'energia è cambiata"
      },
      "tokens": [{
        "name": "$id",
        "title": "$title",
        "type": "$type",
        "example": 7.5
      }]
    }]
  }
}