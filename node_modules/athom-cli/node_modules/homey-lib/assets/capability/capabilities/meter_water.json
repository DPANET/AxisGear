{
  "type": "number",
  "title": {
    "en": "Water Meter",
    "nl": "Watermeter"
  },
  "decimals": 2,
  "min": 0,
  "units": {
    "en": "m³"
  },
  "chartType": "spline",
  "desc": {
    "en": "Water usage in Cubic Meter (m³)",
    "nl": "Water gebruik in Kubieke Meter (m³)"
  },
  "getable": true,
  "setable": false,
  "uiComponent": "sensor",
  "$flow": {
    "triggers": [
      {
        "id": "meter_water_changed",
        "title": {
          "en": "The water meter changed",
          "nl": "De watermeter is veranderd"
        },
        "tokens": [
          {
            "name": "$id",
            "title": "$title",
            "type": "$type",
            "example": 25
          }
        ]
      }
    ]
