{
  "type": "number",
  "title": {
    "en": "Temperature",
    "nl": "Temperatuur"
  },
  "units": {
    "en": "Â°C"
  },
  "decimals": 2,
  "chartType": "spline",
  "getable": true,
  "setable": false,
  "uiComponent": "sensor",
  "$flow": {
    "triggers": [
      {
        "id": "measure_temperature_changed",
        "title": {
          "en": "The temperature changed",
          "nl": "De temperatuur is veranderd"
        },
        "tokens": [
          {
            "name": "$id",
            "title": "$title",
            "type": "$type",
            "example": 23.5
          }
        ]
      }
    ]
  },
  "$speechExamples": {
	  "en": [ "What is the average temperature at home?" ],
    "nl": [ "Wat is de gemiddelde temperatuur thuis?" ]
  },
  "$speech": {
	"en": {
      "element": {
        "temperatureReg": {
          "type": "regex",
          "value": "((what\\sis\\sthe\\s(current\\s)?)temperature|(is\\sit\\s|how\\s)?(warm|hot|cold|cool)(\\sis\\sit)?)"
        }
      },
      "group": {
        "temperature": {
          "set": "temperatureReg",
          "ordered": false,
          "allowDisconnect": true,
          "capturingGroup": true,
          "devices": {
            "capabilities": [
              "measure_temperature"
            ]
          }
        }
      }
    },
    "nl": {
      "element": {
        "temperatureReg": {
          "type": "regex",
          "value": "((huidige\\s)?temperatuur|((warm|heet|koud|koel)|hoeveel\\sgraden)\\s(wordt?|gaat|zal|is)\\shet|het\\s(warm|heet|koud|koel))"
        }
      }
    }
  }
}